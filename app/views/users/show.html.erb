<div class ="college-list clearfix">
  <div class = "college-header">
    <div>
        <h4>My Colleges</h4>
    </div>
    <div class = "add-college">
          <%= link_to "Add new college", new_college_path %>
    </div>
  </div>
  <% if @colleges.length > 0 %>
    <% @colleges.each do |college| %>
    <div class ="college">
      <div class = "college-item rank">
        <%= college.student_rank %>
      </div>
      
      <div class = "college-item name">
        <%= link_to college.name, college_path(college.id) %>
      </div>

      <div class = "college-item duedate">
        <b>Due date:</b>
        <%= college.due_date %>
      </div>
      <div class = "college-item">
        <div class ="ui-progress-bar ui-container transition" id="progress_bar">
            <div class="ui-progress <%= college.name%>" style="width: <%= college.percent_complete %>%;">
                <span class="ui-label" style="display: none;">Completed</span>
            </div>
        </div >
      </div>
      <% if college.complete %>
        <div class = "college-item complete">
          <b>Complete?</b>
          <%= college.complete %>
        </div>
      <% end %>
      <div class = "college-item accepted">
        <%= form_for college do |f| %>

          <b>Accepted?</b>
          <%= f.check_box :accepted %>
          <span class = "button step_submit">
            <%= f.submit %>
          </span>
          <% end %>
      </div>
    </div>
  <% end %>
</div>

<% else %>
<p>You don't have any colleges yet, would you like to add one? <%= link_to "create college", new_college_path %></p>
  <% end %>

